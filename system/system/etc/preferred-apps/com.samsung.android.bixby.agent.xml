<!--
    https://mobilerndhub.sec.samsung.net/its/browse/AICLIENT-5560
    when user long press with Buds/earphone/etc then launch bixby
    rather than selecting between google assistant/bixby
 -->
<preferred-activities>
    <item name="com.samsung.android.bixby.agent/com.samsung.android.bixby.receiver.HeadSetReceiver">
        <filter>
            <action name="android.intent.action.VOICE_COMMAND" />          
            <cat name="android.intent.category.DEFAULT" />
        </filter>
    </item>
</preferred-activities>